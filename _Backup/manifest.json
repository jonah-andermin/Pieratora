{
	"manifest_version": 2,
	"name": "Pieratora",
	"version": "1.1.9008",
	"permissions": [ "tabs", "downloads", "background", "cookies", "storage", "https://www.pandora.com/", "https://pandora.com/" ],
	"browser_action": {
		"default_icon": {
			"16": "img/icon16.png",
			"48": "img/icon48.png",
			"64": "img/icon64.png",
			"128": "img/icon128.png"
		},
		"default_popup": "popup.html"
	},
	"icons": {
		"16": "img/icon16.png",
		"48": "img/icon48.png",
		"64": "img/icon64.png",
		"128": "img/icon128.png"
	},
	"background": {
		"page": "background.html"
	},
	"commands": {
		"next-song": {
			"suggested_key": {
				"default": "Ctrl+Right"
			},
			"description": "Select Next Song"
          	},
		"previous-song": {
			"suggested_key": {
				"default": "Ctrl+Left"
			},
			"description": "Select Previous Song"
		},
		"play-song": {
			"suggested_key": {
				"default": "Ctrl+Up"
			},
			"description": "Play Current Song"
		},
		"pause-song": {
			"suggested_key": {
				"default": "Ctrl+Down"
			},
			"description": "Pause Current Song"
		},
		"volume-down": {
			"description": "Decrease The Volume of Audio"
		},
		"volume-up": {
			"description": "Increase The Volume of Audio"
		},
		"toggle-muted-audio": {
			"description": "Toggle Mute On Audio Volume"
		},
		"download-current-song": {
			"description": "Download The Currently Playing Song"
		}
        },
	"content_security_policy": "script-src 'self'; object-src 'self'",
	"options_page": "options.html"
}